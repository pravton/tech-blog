<div class="box is-max-desktop pt-5 m-3">
  <div class="create-post">
    <h2 class="title is-2 mb-0">Create a Post</h2>
    <div class="create-post-buttons">
      <button id="cp-close" class="button is-danger cp-close"><i class="fas fa-times"></i></button>
      <button id="cp-add" class="button is-primary cp-add"><i class="fas fa-plus"></i></button>
    </div>
  </div>
  {{!-- action="/api/posts/" method="POST" enctype="multipart/form-data" --}}
    <form id="post-form" class="my-3 post-form">
      <div class="field">
        <label class="label">Title</label>
        <div class="control">
          <input id="title-input" class="input" name="title" type="text" placeholder="Text input">
        </div>
      </div>

      <div class="field">
        <label class="label">Content</label>
        <div class="control">
          <textarea id="content-input" name="content" class="textarea" placeholder="10 lines of textarea" rows="10"></textarea>
        </div>
      </div>
      <div class="field">
        <label class="label">Upload a feature image</label>
          <div class="file has-name">
              <label class="file-label">
                <input id="file-input" class="file-input" type="file" name="feature">
                <span class="file-cta">
                  <span class="file-icon">
                    <i class="fas fa-upload"></i>
                  </span>
                  <span class="file-label">
                    Choose a fileâ€¦
                  </span>
                </span>
                <span id="file-name" class="file-name">
                  You can choose a file to upload
                </span>
              </label>
          </div>
      </div>
      <div class="field">
      <div class="control">
        <button type="submit" id="create-post-button" class="button is-primary w-100">Submit</button>
      </div>
      </div>
    </form>
  </div>
</div>

{{!-- User's Posts --}}
<div class="container">
  <h2 class="title is-1 mx-3 my-5">Your Posts</h2>
  {{#each posts as |post|}}
  <div class="tile is-parent">
    <article class="tile is-child box">
       {{> post-info post}}
      <div class="mt-3">
        <a href="/dashboard/edit/{{post.id}}" class="button has-background-primary-light mb-2 mr-2"><i class="fas fa-edit"></i>&nbsp <strong>Edit this post</strong> </a>
        <button id="post-delete" class="button has-background-danger-light" post-id="{{post.id}}"><i class="far fa-trash-alt"></i>&nbsp <strong>Delete this post</strong> </button>
      </div>
    </article>
  </div>
  {{/each}}
</div>

<script src="/javascripts/create-post.js"></script>
{{#if posts}}
<script src="/javascripts/delete-post.js"></script>
{{/if}}